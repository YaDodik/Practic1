#include <iostream>

void draw_triangle(int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j <= i; j++) {
            std::cout << "*";
        }
        std::cout << std::endl;
    }
}

int main() {
    int n;
    std::cout << "Enter the height of the triangle: ";
    std::cin >> n;

    draw_triangle(n);

    return 0;
}
